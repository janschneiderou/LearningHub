<UserControl x:Class="HubDesktop.Recording"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HubDesktop"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid Name="myGrid">
        <Grid Name="appsGrid" Margin="20,20,20,150" ShowGridLines="True">
            
        </Grid>
        <Button Name="buttonStartRecording" Content="Start Recording" HorizontalAlignment="Left" Margin="10,256,0,0" VerticalAlignment="Top" Width="103" Height="34" Click="buttonStartRecording_Click"/>
        <Button Name="buttonStopRecording" IsEnabled="False" Content="Stop Recording" HorizontalAlignment="Left" Margin="118,256,0,0" VerticalAlignment="Top" Width="100" Height="34" Click="buttonStopRecording_Click"/>
    </Grid>
</UserControl>
